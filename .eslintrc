---
extends:
  - eslint:recommended
  - plugin:react/recommended
parserOptions:
  sourceType: module
  ecmaVersion: 8
  ecmaFeatures:
    arrowFunctions: true
    jsx: true
    modules: true

env:
  es6: true
  browser: true
  node: true

rules:
  react/react-in-jsx-scope: [0]
  react/display-name: [0]
